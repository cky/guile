    warn_default=$enable_deprecated
  fi
  AC_DEFINE(SCM_ENABLE_DEPRECATED, 1)
  AC_DEFINE_UNQUOTED(SCM_WARN_DEPRECATED_DEFAULT, "$warn_default")
fi

